<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookInfoActivity">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:src="@drawable/baseline_chat_24"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:text="작가"
                android:textColor="#000" />

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/Author"
                android:text="제목"
                android:textColor="#000" />

            <TextView
                android:id="@+id/ISBN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/bookTitle"
                android:text="ISBN:00-000-000-0000-0"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/imageViewBookCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ISBN" />

            <TextView
                android:id="@+id/Subscript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewBookCover"
                android:hint="내용"
                android:textColor="#000" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>